{
    "compilerOptions": {
        "outDir": "./dist",
        "baseUrl": ".",
        "rootDir": "./src",
        "moduleResolution": "NodeNext",
        "module": "NodeNext",
        "target": "ES2016",
        "strict": true,
        "sourceMap": true,
        "lib": [
            "esnext",
            "DOM"
        ],
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "isolatedModules": true,
        "emitDeclarationOnly": false,
        "experimentalDecorators": false,
        "composite": false,
        "declaration": true,
        "declarationMap": true,
        "noUnusedLocals": false
    },
    "files": ["./src/index.mts"]
}